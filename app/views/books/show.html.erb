<h2><%= @book.title %> </h2>

<h3><%= @book.author %></h3>
<h4>Category: <%= @book.category.name %></h4>

<p><%= @book.description %></p>

<%= link_to "Back", root_path, class: "btn btn-danger" %>

<% if user_signed_in? %>
  <% if @book.user_id === current_user.id %>
    <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-primary" %>
    <%= link_to 'Delete', book_path(@book), method: :delete, class: "btn btn-success", data: { confirm: "Are you sure?"} %>
  <% end %>
<% end %>
