<h1 class="current-category"><%= params[:category].upcase %></h1>

<% if @books.count == 0 %>
  <h2>There are no books currently in this category</h2>
  <% else %>
  <% @books.each do |book| %>
    <h2><%= link_to book.title, book_path(book) %></h2>
  <% end %>
<% end %>

<%= link_to "Add Book", new_book_path %>
